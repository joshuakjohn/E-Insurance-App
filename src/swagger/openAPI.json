            "num_of_policies": {"type": "Number", "required": true, "default": 0},
            "commission": {"type": "Number", "required": true, "default": 0},
            "refreshToken": {"type": "String", "default": null, "required": false}
          }
        },
        "Employee": {
          "type": "object",
